pipeline {
    agent any

    stages {
        stage('without docker') {
            steps {
                sh '''
                echo "without docker"
                ls -la
                touch host.txt
                '''
            }
        }
        stage('With docker') {
            //below is way to define docker container as agent on host
            agent {
                docker {
                    // we can use any image below for container running
                    image 'node:18-alpine'
                    //when i use below line i did not get two workspaces
                    //i only get one workspace which is host one
                    // and all the outcomes of both agent will come on host 
                    // workspace
                    // this is calles workspace synchronization
                    reuseNode true
                }
            }
            steps {
                sh '''
                echo "with docker"
                ls -al
                touch container.txt
                '''
            }
        }
    }
}
// in this pipeline we also concluded that in workspaces section of 
// build we can see both have different workspaces
// and also first stage is run on host
// second stage run on container