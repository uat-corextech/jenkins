pipeline {
    agent any

    stages {
        stage('without docker') {
            steps {
                sh 'echo "without docker"'
            }
        }
        stage('With docker') {
            //below is way to define docker container as agent on host
            agent {
                docker {
                    // we can use any image below for container running
                    image 'node:18-alpine'
                }
            }
            steps {
                sh 'echo "with docker"'
                //below command will show npm version inside container
                sh 'npm --version'
            }
        }
    }
}
